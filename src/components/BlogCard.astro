---
import { formatDate } from '../lib/utils';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  heroImage?: string;
  tags?: string[];
}

const { title, description, pubDate, slug, heroImage, tags } = Astro.props;
---

<div class="group relative overflow-hidden rounded-lg border bg-card text-card-foreground shadow hover:shadow-md transition-all">
  {heroImage && (
    <div class="aspect-video overflow-hidden">
      <img 
        src={heroImage} 
        alt={title} 
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>
  )}
  <div class="p-4">
    <h2 class="text-xl font-semibold mb-2 line-clamp-2">
      <a href={`/blog/${slug}`} class="hover:underline">
        {title}
      </a>
    </h2>
    <p class="text-sm text-muted-foreground mb-3 line-clamp-3">{description}</p>
    <div class="flex justify-between items-center">
      <time datetime={pubDate.toISOString()} class="text-xs text-muted-foreground">
        {formatDate(pubDate)}
      </time>
      {tags && tags.length > 0 && (
        <div class="flex gap-1">
          {tags.slice(0, 2).map(tag => (
            <a href={`/blog/tag/${tag}`} class="text-xs bg-muted px-2 py-0.5 rounded-full">
              {tag}
            </a>
          ))}
          {tags.length > 2 && <span class="text-xs">+{tags.length - 2}</span>}
        </div>
      )}
    </div>
  </div>
</div>
